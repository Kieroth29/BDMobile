<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ConsultaArmazemActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/sp1ConsArmazem"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"/>

    <Spinner
        android:id="@+id/sp2ConsArmazem"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        app:layout_constraintTop_toBottomOf="@id/sp1ConsArmazem"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"/>

    <TextView
        android:id="@+id/tv1ConsArmazem"
        android:layout_width="300sp"
        android:layout_height="30sp"
        app:layout_constraintTop_toBottomOf="@id/sp2ConsArmazem"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="@string/prod_desc"
        android:textColorHint="@color/white"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>