<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".AlterarProdutoActivity">

    <EditText
        android:id="@+id/et1AltProduto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="200sp"
        android:hint="@string/nome" />

    <EditText
        android:id="@+id/et2AltProduto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="@string/desc"
        app:layout_constraintTop_toBottomOf="@id/et1AltProduto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10sp"/>

    <EditText
        android:id="@+id/et3AltProduto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/armazem"
        app:layout_constraintTop_toBottomOf="@id/et2AltProduto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10sp"/>

    <Button
        android:id="@+id/btn1AltProduto"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@id/et3AltProduto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/alterar_produto"
        android:textAllCaps="true"
        android:background="@color/btnColor"/>

    <Button
        android:id="@+id/btn2AltProduto"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@id/btn1AltProduto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/excluir_produto"
        android:textAllCaps="true"
        android:background="@color/btnColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>